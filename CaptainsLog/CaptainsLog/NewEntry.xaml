<Window x:Class="CaptainsLog.NewEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaptainsLog"
        mc:Ignorable="d"
        Title="NewEntry" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="textBoxMainText" Margin="10,33,10,10" TextWrapping="Wrap" Text="Edit entry here" AcceptsReturn="True" AcceptsTab="True"/>
        <TextBox x:Name="textBoxTitle" HorizontalAlignment="Left" Height="23" Margin="34,5,0,0" TextWrapping="Wrap" Text="Enter Title Here" VerticalAlignment="Top" Width="224"/>
        <Button x:Name="buttonSave" Content="+" HorizontalAlignment="Left" Margin="263,5,0,0" VerticalAlignment="Top" Width="19" Click="buttonSave_Click" Height="21"/>
        <TextBlock x:Name="textBlockTitle" HorizontalAlignment="Left" Margin="4,6,0,0" TextWrapping="Wrap" Text="Title:" VerticalAlignment="Top" Height="20"/>

    </Grid>
</Window>
